<Window x:Class="FTP_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FTP_Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800" Background="DarkCyan">
    <Border Padding="100">
        <StackPanel>
            <Label Content="Welccome to the FTP Client App" FontSize="30" Foreground="White" Margin="0,15"/>
            <TextBox x:Name="UserTXT" Background="White" Foreground="DarkCyan" FontSize="18" BorderThickness="3" BorderBrush="DarkSeaGreen" Margin="0,15"/>
            <PasswordBox x:Name="PassTXT" Background="White" Foreground="DarkCyan" FontSize="18" BorderThickness="3" BorderBrush="DarkSeaGreen" Margin="0,15" PasswordChar="*" />
            <Button x:Name="LoginBTN" Background="White" Foreground="DarkCyan" Content="Login" FontSize="25"  BorderBrush="DarkSeaGreen" BorderThickness="3" Margin="100,30"/>
        </StackPanel>
    </Border>
</Window>
