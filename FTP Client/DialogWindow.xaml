<Window x:Class="FTP_Client.DialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FTP_Client"
        mc:Ignorable="d"
        Title="DialogWindow" Height="300" Width="400">
    <StackPanel>
        <Label Content="Please Enter The File Name" HorizontalAlignment="Center" FontSize="25" VerticalAlignment="Center" />
        <TextBox x:Name="DataTXT" HorizontalAlignment="Stretch" Margin="20" BorderThickness="3" BorderBrush="DarkSlateBlue" VerticalAlignment="Center"/>
        <Button x:Name="SaveBTN" Content="Save" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Padding="20,0" Background="DarkSlateBlue" Foreground="White" Click="SaveBTN_Click"/>
    </StackPanel>
</Window>
